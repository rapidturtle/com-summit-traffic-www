<% content_for :head do %>
<%= tag :meta, 'http-equiv'.to_sym => 'pragma', :content => 'no-cache' %>
<% end %>
<div id="hero">
	<%= link_to image_tag('hero_Matrix.png', :alt => 'Dilemma zone protection from Wavetronix'), contact_path %>
</div> <!-- END hero -->

<div class="panel_row">
	<div id="ticker" class="news panel">
		<ul id="news-links">
			<% if @articles.present? %>
				<%= render :partial => "article", :collection => @articles %>
			<% else %>
				<li><%= link_to 'Read the latest news and information from Summit Traffic Solutions.', articles_path %></li>
			<% end %>
		</ul>
	</div> <!-- END panel -->
	
	<div class="panel">
		<%= link_to image_tag('panel_ClickManagedSwitches.png', :alt => 'Wavetronix'), 'http://www.wavetronix.com', :target => '_blank' %>
	</div> <!-- END panel -->
	
	<div class="panel">
		<%= link_to image_tag('panel_iMPathEncoder.png', :alt => 'iMPath Networks'), 'http://www.impathnetworks.com', :target => '_blank' %>
	</div> <!-- END panel -->
</div> <!-- END panel_row -->

<% javascript :ticker %>
<% content_for :script do %>
<script type="text/javascript">
	$(function() {
		if ($("#news-links li").length > 1) $("#news-links").newsTicker();
	});
</script>
<% end %>
