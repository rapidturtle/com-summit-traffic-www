<h1 id="page_title">Sign up as a new user</h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% error_handling_form_for :user, :url => users_path do |f| -%>
<%= f.text_field :login %>
<%= f.text_field :email %>
<%= f.password_field :password %>
<%= f.password_field :password_confirmation %>
<%= submit_tag 'Sign up' %>
<% end -%>
