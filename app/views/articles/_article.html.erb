<h3>
	<%= link_to article.title, article_path(article) %> <%= content_tag :span, "(#{article.post_date.strftime('%b %d, %Y')})", :class => 'article_date' %>
	<% if current_user %>
		<%= link_to '&hellip;'.html_safe, edit_article_path(article), :title => 'edit this article' %>
		<%= link_to '&times;'.html_safe, article_path(article), :class => "delete", :confirm => "Are you sure you want to delete \"#{article.title}\"?", :method => :delete, :title => 'delete this article' %>
	<% end %>
</h3>
<%= auto_link(simple_format(article.body), :html => {:target => "_blank"}).html_safe %>
